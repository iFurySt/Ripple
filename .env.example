# Ripple Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# Server Configuration
# =============================================================================
HOST=localhost
PORT=5334
GIN_MODE=debug
CERT_FILE=
KEY_FILE=

# =============================================================================
# Database Configuration
# =============================================================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=ripple
DB_SSL_MODE=disable
DB_TIMEZONE=UTC

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=console
LOG_FILENAME=logs/ripple.log
LOG_MAX_SIZE=10
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=5
LOG_LOCAL_TIME=true
LOG_COMPRESS=true
LOG_CONSOLE=true
LOG_TIME_FORMAT=2006-01-02 15:04:05
LOG_TIMEZONE=Local

# =============================================================================
# Notion Integration
# =============================================================================
# Get your Notion token from: https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# The database ID from your Notion database URL
NOTION_DATABASE_ID=your_notion_database_id_here

# Notion API version
NOTION_API_VERSION=2022-06-28

# =============================================================================
# Scheduler Configuration
# =============================================================================
# How often to sync from Notion (format: 30m, 1h, 2h30m, etc.)
SYNC_INTERVAL=5m

# Enable/disable automatic sync
SCHEDULER_ENABLED=true